<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="library_author_view_tree" model="ir.ui.view">
        <field name="name">cd.library.author.tree</field>
        <field name="model">cd.library.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

     <record id="library_author_view_form" model="ir.ui.view">
        <field name="name">cd.library.author.form</field>
        <field name="model">cd.library.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page name="disks" string="Disks">
                            <field name="disk_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="library_author_view_search" model="ir.ui.view">
        <field name="name">cd.library.author.search</field>
        <field name="model">cd.library.author</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="library_author_action">
        <field name="name">Authors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cd.library.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_author"
        name="Authors"
        parent="menu_home_library_data"
        action="library_author_action"
        sequence="10"
    />

</odoo>
