<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="library_genre_view_tree" model="ir.ui.view">
        <field name="name">library.genre.tree</field>
        <field name="model">library.genre</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

     <record id="library_genre_view_form" model="ir.ui.view">
        <field name="name">library.genre.form</field>
        <field name="model">library.genre</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="library_genre_view_search" model="ir.ui.view">
        <field name="name">library.genre.search</field>
        <field name="model">library.genre</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="library_genre_action">
        <field name="name">Genres</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.genre</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_genre"
        name="Genres"
        parent="menu_home_library_data"
        action="library_genre_action"
        sequence="30"
    />

</odoo>
